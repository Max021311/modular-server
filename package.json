{
  "name": "modular-server",
  "version": "0.0.1",
  "main": "src/index.js",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#src/*": "./build/src/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "tsc --build --clean",
    "start": "node build/src/index.js",
    "dev": "nodemon",
    "lint": "yarn eslint",
    "lint:fix": "yarn eslint --fix",
    "db:stop": "docker compose down",
    "db:up": "docker compose up -d --wait",
    "db:run": "yarn db:up && yarn db:migrate && yarn db:seed",
    "db:migrate": "cross-env NODE_OPTIONS='--import tsx' knex migrate:latest",
    "db:seed": "cross-env NODE_OPTIONS='--import tsx' knex seed:run",
    "test": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/type-provider-json-schema-to-ts": "^4.0.0",
    "@scalar/fastify-api-reference": "^1.34.6",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "json-schema-to-ts": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.6",
    "nunjucks": "^3.2.4",
    "pg": "^8.13.0",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "^7.0.1",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vercel/node": "^5.3.22",
    "cross-env": "^10.0.0",
    "eslint": "^9.11.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.1.0",
    "fishery": "^2.3.1",
    "nodemon": "^3.1.7",
    "tsx": "^4.20.5",
    "typescript": "5.5.2",
    "vercel": "^48.1.6",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
